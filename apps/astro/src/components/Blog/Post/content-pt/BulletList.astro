---
// eslint-disable-next-line no-unused-vars
const { node, index, ...attrs } = Astro.props
---

<li {...attrs}>
  <slot />
</li>

<style lang="scss">
  li {
    $alignMargin: clamp(0.31rem, calc(0.62vw / 0.48), 0.62rem);
    font-size: var(--typography-body-2xl, 1.25rem);
    display: grid;
    grid-template-columns: auto 1fr;
    gap: clamp(0.75rem, calc(1.25vw / 0.48), 1.25rem);
    padding-top: $alignMargin;
    &:not(:last-child) {
      margin-bottom: clamp(0.75rem, calc(1vw / 0.48), 1rem);
    }
    &::before {
      content: '';
      background: url('data:image/svg+xml;base64,')
        center / contain no-repeat;
      width: clamp(2.5rem, calc(3.5vw / 0.48), 3.5rem);
      height: clamp(2.5rem, calc(3.5vw / 0.48), 3.5rem);
      margin-top: calc($alignMargin * -1);
    }
  }
</style>
