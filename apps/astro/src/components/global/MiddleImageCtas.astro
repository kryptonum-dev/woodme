---
import { ButtonDataQuery, type ButtonDataProps } from '../ui/button';
import Button from '../ui/button/Button.astro';
import Image, { ImageDataQuery, type ImageDataProps } from '../ui/image';
import PortableText, { PortableTextQuery, type PortableTextValue } from '../ui/portable-text';

export const MiddleImageCtas_Query = `
  _type == "MiddleImageCtas" => {
    ${ImageDataQuery('image')}
    ${PortableTextQuery('heading')}
    ${PortableTextQuery('paragraph')}
    ${ButtonDataQuery('ctas[]')}
    backgroundColor,
  },
`;

type Props = {
  index: number;
  sectionId?: string;
  image: ImageDataProps;
  heading: PortableTextValue;
  paragraph: PortableTextValue;
  ctas: ButtonDataProps[];
  backgroundColor: string;
};

const { index, sectionId, heading, image, paragraph, ctas, backgroundColor } = Astro.props;
---

<section class="MiddleImageCtas" id={sectionId}>
  <div class="container max-width" data-background={backgroundColor}>
    {index === 0 && <div class="eclipse" />}

    <Image
      class="image"
      {...image}
      sizes="(max-width: 37.5rem) 100vw, (max-width: 48rem) 80vw, (max-width: 56.25rem) 608px, (max-width: 68.125rem) 52vw, 566px"
      priority={index === 0}
    />

    <header class="header">
      <PortableText value={heading} heading={index === 0 ? 'h1' : 'h2'} class="heading" />
      <PortableText value={paragraph} class="paragraph" />
    </header>
    <div class="ctas">
      {ctas.map((cta) => <Button {...cta} />)}
      <div class="eclipses"></div>
    </div>
  </div>
</section>

<style lang="scss">
  .MiddleImageCtas {
    padding: 1.25rem 0;

    .container {
      border-radius: 12px;
      display: flex;
      justify-content: flex-end;
      align-items: stretch;
      gap: 2rem 2.5rem;
      position: relative;
      padding: 0.75rem 0 1.5rem;
      position: relative;
      padding-left: 1.75rem;

      .image {
        width: clamp(400px, calc(400vw / 7.68), 566px);
        height: clamp(560px, calc(560vw / 7.68), 708px);
        border-radius: 8px;
        position: relative;
      }

      .header {
        width: 100%;
        max-width: 22.125rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 1.25rem 1.75rem 0.5rem 0;

        .heading {
          padding-bottom: 1.5rem;
          position: relative;

          &::before {
            content: '';
            width: 100%;
            height: 1px;
            background-color: var(--neutral-400, #c1d1c8);
            position: absolute;
            bottom: 0;
            left: 0;
            animation: expandLine 1800ms var(--easing);
            transform-origin: left;

            @keyframes expandLine {
              from {
                transform: scaleX(0);
              }
              to {
                transform: scaleX(1);
              }
            }
          }
        }

        @media (max-width: 73.75rem) {
          padding-bottom: 3.5rem;
        }
      }

      .ctas {
        position: absolute;
        display: flex;
        gap: 0.375rem 1.25rem;
        padding: 0.75rem 1.25rem;
        border-radius: 6px 6px 0 0;
        background-color: var(--neutral-200, #e9f2ed);
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        animation: slide-in 1200ms var(--easing);

        &::before,
        &::after {
          content: '';
          position: absolute;
          background-color: #ccdde9;
          bottom: 0;
          border-radius: 0 0 12px 12px;
          height: auto;
          width: 30px;
          z-index: 5;
          aspect-ratio: 1326/744;
        }
        &::before {
          left: -30px;
        }

        &::after {
          right: -30px;
        }

        .eclipses {
          position: absolute;
          inset: 0;
          pointer-events: none;

          &::before,
          &::after {
            content: '';
            position: absolute;
            bottom: 0;
            background-color: var(--neutral-200, #e9f2ed);
            height: 12px;
            width: 12px;
          }

          &::before {
            left: -12px;
          }

          &::after {
            right: -12px;
          }
        }
      }

      &::before,
      &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0px;
        z-index: 10;
        background-color: inherit;
        border-radius: 12px 0 0 0;
        width: clamp(20px, calc(20vw / 10.24), 30px);
        height: auto;
        aspect-ratio: 1326/744;
      }

      &::before {
        left: 20.125rem;
        width: clamp(20px, calc(19vw / 10.24), 30px);
        transform: scaleY(0.8);
        transform-origin: top;
      }

      &::after {
        top: 2.75rem;
      }

      .eclipse {
        position: absolute;
        top: 2.75rem;
        left: 0;
        background: var(--neutral-200, #e9f2ed);
        width: clamp(20px, calc(20vw / 10.24), 30px);
        height: 9px;
        z-index: 3;

        &::before {
          content: '';
          position: absolute;
          top: -2.75rem;
          left: 1rem;
          background-color: red;
          height: 3.75rem;
          width: 20rem;
          z-index: 7;
          border-radius: 0 0 12px 0;
          background-color: var(--tertiary-200, #ccdde9);
        }
      }

      &[data-background='#CCDDE9'] {
        background-color: var(--tertiary-200, #ccdde9);
        .header {
          .heading {
            color: var(--tertiary-600, #4a5f6e);
          }
        }

        .ctas {
          &::before,
          &::after {
            background-color: var(--tertiary-200, #ccdde9);
          }
        }
      }

      &[data-background='#E3DFD3'] {
        background-color: var(--secondary-300, #e3dfd3);

        .header {
          .heading {
            color: var(--neutral-900, #141915);

            :global(strong) {
              color: var(--neutral-700, #5f6d62);
            }
          }
        }

        .ctas {
          &::before,
          &::after {
            background-color: var(--secondary-300, #e3dfd3);
          }
        }

        .eclipse {
          &::before {
            background-color: var(--secondary-300, #e3dfd3);
          }
        }
      }
      &[data-background='#D0E1D7'] {
        background-color: var(--neutral-300, #d0e1d7);

        .header {
          .heading {
            color: var(--neutral-700, #5f6d62);
          }
        }

        .ctas {
          &::before,
          &::after {
            background-color: var(--neutral-300, #d0e1d7);
          }
        }

        .eclipse {
          &::before {
            background-color: var(--neutral-300, #d0e1d7);
          }
        }
      }
    }

    @media (max-width: 56.25rem) {
      padding: clamp(1.5rem, calc(2vw / 0.48), 2rem) 0 clamp(1.5rem, calc(2vw / 0.48), 2rem);
      .container {
        display: flex;
        flex-direction: column;
        padding: 0;
        background-color: transparent;

        .image {
          order: 2;
          max-width: 608px;
          max-height: clamp(449px, calc(759vw / 7.68), 759px);
          width: 100%;
          height: auto;
          border-radius: 6px;
        }

        .header {
          max-width: none;
          order: 1;
          padding: 0;

          .heading {
            padding-bottom: 0;
            margin-bottom: clamp(1.25rem, calc(1.5rem / 0.48), 1.5rem);

            &::before {
              display: none;
            }
          }
        }
        .eclipse {
          display: none;
        }

        &::before,
        &::after {
          display: none;
        }

        .ctas {
          &:has(a:nth-child(2)) {
            width: 100%;
            max-width: 26.75rem;
          }
          width: fit-content;
          z-index: 20;
          justify-content: center;
          position: relative;
          margin-top: -4rem;
          order: 3;
          &::before,
          &::after {
            display: none;
          }
          .eclipses {
            display: none;
          }
        }

        &[data-background='#CCDDE9'],
        &[data-background='#E3DFD3'],
        &[data-background='#D0E1D7'] {
          background-color: transparent;
        }
      }
    }
    @media (max-width: 37.5rem) {
      .container {
        .image {
          margin: 0 calc(-1 * var(--pageMargin));
          width: calc(100% + var(--pageMargin) * 2);
        }
      }
    }

    @media (max-width: 27.5rem) {
      .container {
        .ctas {
          flex-direction: column;
          align-items: center;

          a[data-theme='primary'] {
            width: 100%;
            max-width: 100%;
            justify-content: stretch;

            :global(div) {
              width: 100%;
              flex: 1;
              justify-content: center;
              max-width: 100%;
            }
          }
        }
      }
    }
  }
</style>
