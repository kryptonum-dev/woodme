---
// eslint-disable-next-line no-unused-vars
const { node, index, ...attrs } = Astro.props;
---

<li {...attrs}>
  <slot />
</li>

<style lang="scss">
  li {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.675rem;
    &:not(:last-child) {
      margin-bottom: 0.675rem;
    }
    &::before {
      content: '';
      width: 0.25rem;
      height: 0.25rem;
      background-color: var(--neutral-600, #87988b);
      border-radius: 999px;
      margin-top: 0.75rem;
    }

    :global(ul) {
      grid-column: 1/3;
      grid-row: 2/3;
      margin-left: 1.25rem;
    }
  }
</style>
