---
import Image, { ImageDataQuery, type ImageDataProps } from '../components/ui/image';
import PortableText, { PortableTextQuery, type PortableTextValue } from '../components/ui/portable-text';
import sanityFetch from '../utils/sanity.fetch';
import { ButtonDataQuery, type ButtonDataProps } from '../components/ui/button';
import Button from '../components/ui/button/Button.astro';

type Props = {
  background: string;
};

const { background } = Astro.props as Props;

const { global } = await sanityFetch<{
  global: {
    socials: { instagram: string; tiktok: string; linkedin: string; facebook: string };
    footer: {
      highlitedProjects: { name: string; slug: string; heading: PortableTextValue; image: ImageDataProps }[];
      internalLinks: { title: string; link: { slug: string } }[];
      paragraph: PortableTextValue;
      cta: ButtonDataProps;
    };
  };
}>({
  query: `
    {
    "global": *[_type == "global"][0]{
     socials,
     footer {
     "highlitedProjects": highlitedProjects[]->{
        ${ImageDataQuery('image')}
        "slug": slug.current,
        name,
        ${PortableTextQuery('heading')}
        },
        "internalLinks": internalLinks[]{
        title,
        link-> {
          "slug": slug.current,
        },
        },
        ${PortableTextQuery('paragraph')}
        ${ButtonDataQuery('cta')}
    },
},
}
  `,
});

const letters = ['W', 'O', 'O', 'D', 'M', 'E'];
