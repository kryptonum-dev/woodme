---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../layouts/Breadcrumbs.astro';
import { fetchPageData } from '../utils/fetch-page-data';
import Components from '../components/Components.astro';

const data = await fetchPageData('Index_Page');

if (!data) {
  return Astro.redirect('/404');
}

const { page, metadata } = data;
---

<Layout footerBackground={page.footerBackground} {...metadata}>
  <Breadcrumbs />
  <Components data={page.components} />
</Layout>
